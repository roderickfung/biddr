<!DOCTYPE html>
<html>
  <head>
    <title>Biddr</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class='navbar navbar-default navbar-fixed-top bg-faded'>
      <div class='container'>
        <ul class='nav navbar-nav navbar-left'>
          <li><%=link_to 'Biddr', root_path, class: 'navbar-brand'%></li>
          <li><%= link_to 'Auction', items_path%></li>
        </ul>
        <ul class='nav navbar-nav navbar-right'>
          <%if user_signed_in?%>
            <li><%=link_to "#{current_user.full_name}", user_path(current_user)%></li>
          <%else%>
            <li><%=link_to "Welcome!", '#'%></li>
          <%end%>
          <li class='dropdown'>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class='glyphicon glyphicon-user'></span><span class="caret"></span></a>
            <ul class="dropdown-menu">
              <% if user_signed_in?%>
                <li><%= link_to "User Profile", user_path(current_user)%></li>
                <li><%= link_to "New Auction", new_item_path%></li>
                <li><%= link_to "Log Out", sessions_path, method: :delete%></li>
              <%else%>
                <li><%=link_to 'Register', new_user_path%></li>
                <li><%=link_to 'Log In', new_session_path%></li>
              <%end%>
            </ul>
          </li>
        </ul>
      </div>
    </nav>
    <div class='container'>
      <div class = 'navbar-space'></div>
      <div class='alert-success'>
        <center><%=flash[:notice]%></center>
      </div>
      <div class='alert-danger'>
        <center><%=flash[:alert]%></center>
      </div>
      <div class = 'navbar-space-lg'></div>
      <%= yield %>
    </div>
  </body>
</html>
